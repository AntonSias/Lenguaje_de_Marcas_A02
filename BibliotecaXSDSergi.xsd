<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="Biblioteca">
        <xs:complexType>
            <xs:choice maxOccurs="unbounded">
                <!--Libros-->
                <xs:element name="libro">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="titulo" type="xs:string" />
                            <xs:element name="capitulo" type="xs:string" minOccurs="0" maxOccurs="unbounded" />
                            <xs:element name="informacion" type="xs:string" />
                            <xs:element name="sipnosis" type="xs:string" />
                            <xs:element name="indice" type="xs:string" />
                        </xs:sequence>
                        <xs:attribute name="id" type="xs:string" use="required" />
                        <xs:attribute name="tipo_clase" type="xs:string" use="required" />
                        <xs:attribute name="numero_paginas" type="xs:integer" use="required" />
                    </xs:complexType>
                </xs:element>
                <!--revista-->
                <xs:element name="revista">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="titulo" type="xs:string" />
                            <xs:element name="numero_revista" type="xs:integer" />
                            <xs:element name="indice_contenido" type="xs:string" />
                            <xs:element name="seccion" minOccurs="0" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="contenido" type="xs:string" />
                                    </xs:sequence>
                                    <xs:attribute name="numero_paginas" type="xs:integer" />
                                    <xs:attribute name="enlace_informacion" type="xs:string" />
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="id" type="xs:string" use="required" />
                        <xs:attribute name="tipo_clase" type="xs:string" default="otros" />
                        <xs:attribute name="numero_paginas" type="xs:integer" />
                    </xs:complexType>
                </xs:element>
                <!--Periodico-->
                <xs:element name="periodico">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="seccion" minOccurs="0" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="articulo" type="xs:string" maxOccurs="10" />
                                    </xs:sequence>
                                    <xs:attribute name="autor" type="xs:string" />
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="indice" type="xs:string" />
                            <xs:element name="contenido" type="xs:string" />
                        </xs:sequence>
                        <xs:attribute name="tipo" type="xs:string" />
                    </xs:complexType>
                </xs:element>
            </xs:choice>
        </xs:complexType>
    </xs:element>
</xs:schema>