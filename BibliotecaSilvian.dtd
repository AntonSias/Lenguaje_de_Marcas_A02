<!DOCTYPE Biblioteca [
   <!ELEMENT Biblioteca (libro,revista,periódico)*>
       <!ELEMENT libro(#PCDATA)>
       <!ELEMENT revista(#PCDATA)>
       <!ELEMENT periódico(#PCDATA)>
]>

<!DOCTYPE libro [
   <!ELEMENT libro (id, tipo_clase, numero_capitulos,numero_paginas, ,titulo,capitulo,contenido,indice,sinopsis)*>
       <!ELEMENT id(#PCDATA)>
       <!ELEMENT tipo_clase(#PCDATA)>
       <!ELEMENT numero_capitulos(#PCDATA)>
       <!ELEMENT numero_paginas(#PCDATA)>
       <!ELEMENT titulo(#PCDATA)>
       <!ELEMENT capitulo(#PCDATA)>
       <!ELEMENT contenido(#PCDATA)>
       <!ELEMENT indice(#PCDATA)>
       <!ELEMENT sinopsis(#PCDATA)>
]>


<!DOCTYPE revista [
   <!ELEMENT revista (id, tipo_clase, ,numero_paginas, ,titulo,numero_revistas,indice,secciones,numero_paginas,contenido)*>
       <!ELEMENT id(#PCDATA)>
       <!ELEMENT tipo_clase(#PCDATA)>
       <!ELEMENT numero_paginas(#PCDATA)>
       <!ELEMENT titul(#PCDATA)>
       <!ELEMENT numero_revistas(#PCDATA)>
       <!ELEMENT indice(#PCDATA)>
       <!ELEMENT secciones(#PCDATA)>
       <!ELEMENT numero_paginas(#PCDATA)>
       <!ELEMENT contenido(#PCDATA)>
]>


<!DOCTYPE periódico [
   <!ELEMENT periódico (id,tipo_clase,fecha_de_publicación,secciones,tipo_seccion,articulo,contenido,indice)*>
       <!ELEMENT id (#PCDATA)>
       <!ELEMENT tipo_clase(#PCDATA)>
       <!ELEMENT fecha_de_publicación(#PCDATA)>
       <!ELEMENT secciones(#`PCDATA)>
       <!ELEMENT tipo_seccion(#PCDATA)>
       <!ELEMENT articulo(#PCDATA)>
       <!ELEMENT contenido(#PCDATA)>
       <!ELEMENT indice (#PCDATA)>
]>

 <!--DEFINIMOS LOS ATRIBUTOS QUE APERTENECEN A LA ETIQUETA BIBLIOTECA -->
  
    <!ATTLIST biblioteca (libro|revista|periodico)>
    <!ATTLIST biblioteca libro  (titulo, capitulos, indice, sinopsis)>
    <!ATTLIST biblioteca revista (informatica | corazon| coches | investigacion | otras) #REQUIRED>
    <!ATTLIST biblioteca periodico (internacional | nacional) #REQUIRED>
    

 <!--DEFINIMOS LOS ATRIBUTOS QUE APERTENECEN A LA ETIQUETA LIBRO -->

    <!ATTLIST libro id ID #REQUIRED>
    <!ATTLIST libro tipo_clase (novela | infantil | didáctico)  #REQUIRED>
    <!ATTLIST libro numero_capitulos CDATA #REQUIRED>
    <!ATTLIST libro numero_paginas CDATA >
    <!ATTLIST libro titul CDATA #REQUIRED>
    <!ATTLIST libro capitulo CDATA #REQUIRED>
    <!ATTLIST libro contenido CDATA #REQUIRED>
    <!ATTLIST libro indice CDATA #REQUIRED>
    <!ATTLIST libro sinopsis CDATA #REQUIRED>
  
<!--DEFINIMOS LOS ATRIBUTOS QUE APERTENECEN A LA ETIQUETA REVISTA -->
    
    <!ATTLIST revista id ID #REQUIRED>
    <!ATTLIST revista tipo_clase(informatica | corazon | coches | investigacion | otras) #REQUIRED>
    <!ATTLIST revista numero_paginas #REQUIRED>
    <!ATTLIST revista titulo #REQUIRED>
    <!ATTLIST revista numero_revistas #REQUIRED>
    <!ATTLIST revista indice CDATA #REQUIRED>
    <!ATTLIST revista secciones CDATA #REQUIRED>
    <!ATTLIST revista contenido CDATA #REQUIRED>

<!--DEFINIMOS LOS ATRIBUTOS QUE APERTENECEN A LA ETIQUETA PERIODICO -->

    <!ATTLIST periodico id ID #REQUIRED>
    <!ATTLIST periodico tipo_clase(nacional | internacional) #REQUIRED>
    <!ATTLIST periodico fecha_de_publicación CDATA #REQUIRED>
    <!ATTLIST periodico secciones CDATA #REQUIRED>
    <!ATTLIST periodico contenido  CDATA #REQUIRED>
    <!ATTLIST periodico indice CDATA #REQUIRED>


